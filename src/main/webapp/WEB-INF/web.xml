<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
    
  
  <display-name>ClotheStore</display-name>
  
  <!-- Cấu hình bật EL -->
  <jsp-config>
    <jsp-property-group>
        <url-pattern>*.jsp</url-pattern>
        <el-ignored>false</el-ignored>
    </jsp-property-group>
</jsp-config>

  
   	<resource-ref>
    <res-ref-name>jdbc/mydb</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
</resource-ref>
  
<filter>
    <filter-name>getCartFilter</filter-name>
    <filter-class>util.getCartFilter</filter-class>
</filter>


<filter-mapping>
    <filter-name>getCartFilter</filter-name>
    <url-pattern>/*</url-pattern>
</filter-mapping>



<filter>
    <filter-name>AuthoFilter</filter-name>
    <filter-class>util.AuthoFilter</filter-class>
</filter>
<filter-mapping>
    <filter-name>AuthoFilter</filter-name>
    <url-pattern>/profile/*</url-pattern>
</filter-mapping>

<filter-mapping>
    <filter-name>AuthoFilter</filter-name>
    <url-pattern>/order/*</url-pattern>
</filter-mapping>

<filter-mapping>
    <filter-name>AuthoFilter</filter-name>
    <url-pattern>/user/*</url-pattern>
</filter-mapping>
<filter-mapping>
    <filter-name>AuthoFilter</filter-name>
    <url-pattern>/cart/checkout</url-pattern>
</filter-mapping>
<filter-mapping>
    <filter-name>AuthoFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
</filter-mapping>

<error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/error/error.jsp</location> <!-- Đường dẫn đến file jsp lỗi của bạn -->
</error-page>

<error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/error/error404.jsp</location>
</error-page>
</web-app>